#include<bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while(t--){
        int n,m,k;
        cin>>n>>m>>k;
        string a, b;
        cin>>a>>b;
        sort(a.begin(),a.end());
        sort(b.begin(),b.end());
        string c;
        int ai = 0;
        int bi = 0;
        for(int i = 0; i < max(a.length(),b.length()); i++){
            if(a[ai]<=b[bi]){
                c.push_back(a[ai]);
                ai++;
            }
            else{
                c.push_back(b[bi]);
                bi++;
            }
        }


    }
}
